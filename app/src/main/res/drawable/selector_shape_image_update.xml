<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/update"
                    android:tileMode="repeat" />
            </item>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="#a0e0b071" android:startColor="#a0a67637" />
                    <stroke android:width="5dp" android:color="#5c3708" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <!-- la imagen -->
            <item>
                <bitmap android:gravity="fill"
                    android:src="@drawable/update"
                    android:tileMode="disabled" />
            </item>

            <!-- la forma y colores -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="#a0a61372" android:startColor="#a03d77e0" />
                    <stroke android:width="5dp" android:color="#ff5aff43" />
                    <corners android:radius="5dp" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>